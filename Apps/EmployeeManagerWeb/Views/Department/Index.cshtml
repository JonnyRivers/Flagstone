@model IEnumerable<Flagstone.Data.Employees.Department>

@{
    ViewBag.Title = "Departments";
}

<div class="panel panel-default">
  <div class="panel panel-heading">
    <h3>All Departments</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
      <thead thead-default>
        <tr class="row">
          <th class="col-md-10">
            @Html.DisplayNameFor(model => model.Name)
          </th>
          <th class="col-md-2">
            Actions
          </th>
        </tr>
      </thead>
      @foreach (Flagstone.Data.Employees.Department item in Model)
      {
          @Html.HiddenFor(model => item.DepartmentId)
          <tr class="row">
            <td class="col-md-10">
              @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="col-md-2">
              @Html.ActionLink("Edit", "Edit", new { departmentId = item.DepartmentId })
              @Html.ActionLink("Delete", "Delete", new { departmentId = item.DepartmentId }, new { onclick = "return confirm('Are you sure?');" })
            </td>
          </tr>
      }
    </table>
  </div>
  <div class="panel-footer">
    @Html.ActionLink("Add new department", "Create", null, new { @class = "btn btn-default" })
  </div>
</div>