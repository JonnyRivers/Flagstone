@{
    ViewBag.Title = "Departments";
}

<div class="panel panel-default">
  <div class="panel panel-heading">
    <h3>All Departments</h3>
  </div>
  <div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
      <tr>
        <th class="text-right">Id</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      @foreach (Flagstone.Data.Employees.Department department in Model)
      {
          <tr>
            <td class="text-right">@department.DepartmentId</td>
            <td>@Html.ActionLink(department.Name, "Edit", new { department.DepartmentId })</td>
            <td class="text-center">
              @using (Html.BeginForm("Delete", "Department"))
              {
                  @Html.Hidden("departmentId", department.DepartmentId)
                  <input type="submit" class="btn btn-default btn-xs" value="Delete" />
              }
            </td>
          </tr>
      }
    </table>
    <div class="panel-footer">
      @Html.ActionLink("Add new department", "Create", null, new { @class = "btn btn-default" })
    </div>
  </div>
</div>