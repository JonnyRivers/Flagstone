<Window x:Class="EmployeeManager.View.EditEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Employee" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0">First Name</Label>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FirstName}"></TextBox>
        <Label Grid.Row="1" Grid.Column="0">Last Name</Label>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding LastName}"></TextBox>
        <Label Grid.Row="2" Grid.Column="0">Date of Birth</Label>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DateOfBirth, StringFormat=d}"></TextBlock>
        <Label Grid.Row="3" Grid.Column="0">Department</Label>
        <ComboBox Grid.Row="3" Grid.Column="1" Text="{Binding Department}" ItemsSource="{Binding Departments}"></ComboBox>
        <Button Grid.Row="5" Grid.Column="1" Command="{Binding ApplyChangesCommand}">OK</Button>
    </Grid>
</Window>
